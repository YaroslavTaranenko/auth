extends layout

block content
	div.container
		div.row
			div.col-lg-4
			form.form.col-lg-4(action="/register" method="POST")
				div.form-group
					label Email: 
					input.form-control(type="email" placeholder="Enter your email.")
				div.form-group
					label Password: 
					input.form-control(type="password" placeholder="Enter your password")
				button.btn.btn-primary(type="submit") Submit
			div.col-lg-4